{% extends "base.html.twig" %}
{% block title %}All programs{% endblock title %}

{% block body %}
    
<h1>Toutes les séries </h1>
    {% for program in programs %}
    <div>

        <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }} </h2>
        <a href="{{path('program_show', {id:program.id})}}"><img src="{{ program.poster }}" alt="image d'une série" style="width:250px;height:250px;"></a>
        <p>{{ program.summary }}</p>

        {#<a href="{{path('show', {id: program.id})}}">Voir la fiche</a>#}
    </div>
    {% else %}
        <h1>Aucune série trouvée</h1>
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour a l'accueil
    </a>


{% endblock body %}