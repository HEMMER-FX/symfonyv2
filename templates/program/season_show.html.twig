{% extends 'base.html.twig' %}
{% block title %} Série # {{ program.id }}{% endblock %}

{% block body %}
     <h1 style="color:white;font-size:5em;">program n°{{ program.id }}</h1>

     <div class="media">

  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

  <div class="media-body">

    <h1 class="mt-0">{{ program.title }}</h1>

    <p>{{ program.summary }}</p>

    <p>Catégorie : {{ program.category.name }}</p>
    <div class="lien">
      
      {% for seasons in season %} 
        <a href="{{ path('program_season_show', {program :program.id , season :seasons.id}) }} ">saisons {{ seasons.number }}</a>
      {% endfor %}

      {% for episode in episodes %}
        <h1> {{ episode.title }} </h1>
      {% endfor %}
    </div>

  </div>

</div>

   {#} <a href="{{ path('home') }}">
        Retour a la liste des séries
    </a>#}
{% endblock %} 