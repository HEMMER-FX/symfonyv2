{% extends "base.html.twig" %}

{% block title %}
    {{ category.name }}
{% endblock title %}

{% block body %}

    {% for program in programs %}
    <div class="media">
        <a href="{{path('show', {id:program.id})}}"><img src="{{ program.poster }}" alt="image d'une série"></a>
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
    
    {% endfor %}
    <a href="{{ path('category_index') }}">Retour a la liste des programmes </a>
{% endblock %}
